    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="624dp"
        android:src="@drawable/banner2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="175dp"
        android:layout_height="155dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-4dp"
        android:layout_marginEnd="241dp"
        android:layout_marginBottom="519dp"
        android:src="@drawable/avatar1" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="199dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="560dp"
        android:text="Blankcil UserName"
        android:textColor="#E91E63"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="425dp"
        android:backgroundTint="#F32A6F"
        android:text="View and Edit Profile"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/iconPodcast"
        android:layout_width="58dp"
        android:layout_height="43dp"
        android:layout_above="@+id/btnEditProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="187dp"
        android:layout_marginBottom="51dp"
        android:src="@drawable/ic_podcast" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEditProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="64dp"
        android:text="podcasts"
        android:textColor="#99BFDD"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtNumberOfPodcasts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEditProfile"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="63dp"
        android:text="12"
        android:textColor="#99BFDD"
        android:textSize="15sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewPodcast"
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:background="#AFB6E1"
        android:clipToPadding="false"
        android:padding="8dp" />


</RelativeLayout>