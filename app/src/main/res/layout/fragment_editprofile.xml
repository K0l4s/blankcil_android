<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black80"
        tools:context=".view.fragments.EditProfileFragment">

        <!-- ImageView for Back Button -->
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="53dp"
            android:layout_height="33dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_back" />

        <!-- ImageView for Edit Banner -->
        <ImageView
            android:id="@+id/imgEditBanner"
            android:layout_width="410dp"
            android:layout_height="143dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imgBack"
            android:layout_marginTop="16dp"
            android:src="@drawable/banner2" />

        <!-- TextView for Change Banner -->
        <TextView
            android:id="@+id/txtChangeBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgEditBanner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Change Banner"
            android:textColor="#F879A4"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- ImageView for Edit Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgEditAvatar"
            android:layout_width="225dp"
            android:layout_height="143dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtChangeBanner"
            android:layout_marginTop="16dp"
            android:src="@drawable/avatar1" />

        <!-- TextView for Change Avatar -->
        <TextView
            android:id="@+id/txtChangeAvatar"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@id/imgEditAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Change Avatar"
            android:textColor="#F879A4"
            android:textStyle="bold" />

        <!-- EditText for Full Name -->
        <EditText
            android:id="@+id/edtFullname"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtChangeAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:hint="Full name"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- TextView for Email -->
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtFullname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="user@example.com"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- EditText for Birthday -->
        <EditText
            android:id="@+id/edtBirthday"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:hint="Birthday"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- EditText for Phone -->
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtBirthday"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:hint="Phone"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- EditText for Address -->
        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtPhone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="Address"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- ImageView for Calendar -->
        <ImageView
            android:id="@+id/imgCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtBirthday"
            android:layout_alignEnd="@id/edtBirthday"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_calendar" />

        <!-- Button for Save -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtPhone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp"
            android:backgroundTint="#DF3670"
            android:text="Save" />

    </RelativeLayout>
</ScrollView>


